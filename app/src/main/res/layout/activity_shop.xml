<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ShopActivity">

    <ImageView
        android:id="@+id/imgdiamond"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/tv_coins"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/diamond" />

    <TextView
        android:id="@+id/tv_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imgGold"
        android:text="100"
        android:textColor="#000000"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/imgGold"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/gold_coins"
        android:src="@drawable/gold_coin"/>
    <TextView
        android:id="@+id/gold_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"

        android:text="100"
        android:textColor="#000000"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_action_home" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/cycle"
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        app:lottie_autoPlay="true"
        android:layout_centerHorizontal="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/shopping_cart" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/timer" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/shopP1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/player1a" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/shopP2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:src="@drawable/player2a" />


                <RelativeLayout
                    android:id="@+id/unlock2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#c26c6b6b">

                    <TextView
                        android:id="@+id/abc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="LOCKED"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="60"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/gold"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="2dp"
                        android:layout_toRightOf="@+id/price2"
                        android:src="@drawable/gold_coin" />


                    <TextView
                        android:id="@+id/gold_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/price2"
                        android:layout_centerHorizontal="true"
                        android:text="30"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_margin="2dp"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@id/price2"
                        android:layout_toRightOf="@+id/price2"
                        android:src="@drawable/diamond" />


                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/shopP3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:src="@drawable/player3a" />


                <RelativeLayout
                    android:id="@+id/unlock3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#c26c6b6b">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="LOCKED"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/gold_price3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@id/price3"
                        android:text="50"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_margin="2dp"
                        android:layout_above="@id/price3"
                        android:layout_toRightOf="@+id/price3"
                        android:src="@drawable/diamond" />

                    <TextView
                        android:id="@+id/price3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="100"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="2dp"
                        android:layout_toRightOf="@+id/price3"
                        android:src="@drawable/gold_coin" />

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/shopP4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:src="@drawable/player4a" />


                <RelativeLayout
                    android:id="@+id/unlock4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#c26c6b6b">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="LOCKED"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/gold_price4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/price4"
                        android:layout_centerHorizontal="true"
                        android:text="80"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_above="@id/price4"
                        android:layout_margin="2dp"
                        android:layout_toRightOf="@+id/price4"
                        android:src="@drawable/diamond" />

                    <TextView
                        android:id="@+id/price4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="160"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="2dp"
                        android:layout_toRightOf="@+id/price4"
                        android:src="@drawable/gold_coin" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>